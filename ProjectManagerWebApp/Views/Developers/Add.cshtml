@model UserViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4>Add user</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <form asp-action="Add" asp-controller="Developers" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="addEmail" class="form-label">User email</label>
                <input type="email" class="form-control" id="addEmail" asp-for="Email">
            </div>
            <div class="form-group">
                <input type="submit" class="btn-primary" value="Add user"/>
            </div>
        </form>
    </div>
</div>
