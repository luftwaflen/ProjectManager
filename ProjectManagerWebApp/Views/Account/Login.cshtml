@model LoginViewModel

@{
    ViewBag.Title = "Login page";
    Layout = "_LoginLayout";
}

<div class="m-5">
    <div class="m-3 d-flex justify-content-center">
        <h2>Login</h2>
    </div>
    <form asp-action="Login" asp-controller="Account" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label for="loginName" class="form-label">Name</label>
            <input type="text" class="form-control" id="loginName" asp-for="Name">
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group mb-3">
            <label for="loginEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="loginEmail" asp-for="Email">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group mb-3">
            <label for="loginPas" class="form-label">Password</label>
            <input type="text" class="form-control" id="loginPas" asp-for="Password">
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group d-flex justify-content-center">
            <input type="submit" class="btn-primary btn-lg" value="Login"/>
        </div>
    </form>
    <a href="@Url.Action("Register", "Account")">Register account</a>
</div>